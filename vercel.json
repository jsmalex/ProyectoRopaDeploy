{
    "version": 2,
    "builds": [
        {
            "src": "main.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "main:app"
        }
    ],
    "build": {
        "env": {
            "PYTHONUNBUFFERED": "1"
        },
        "command": "pip install -r requirements.txt && uvicorn main:app --host 0.0.0.0 --port 8000"
    }
}